generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model UsedTopics {
  id             String   @id @default(uuid())
  rawTopic       String
  source         String
  sourceUrl      String
  contextSummary String?
  createdAt      DateTime @default(now())
  personalAngle  String?
  tweet          Tweet?
}

model Tweet {
  id          String     @id @default(uuid())
  content     String
  createdAt   DateTime   @default(now())
  postUrl     String?
  usedTopicId String     @unique
  usedTopic   UsedTopics @relation(fields: [usedTopicId], references: [id])
}
