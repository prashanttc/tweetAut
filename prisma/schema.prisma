generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model UsedTopics {
  id             String   @id @default(uuid())
  rawTopic       String
  source         String
  sourceUrl      String
  contextSummary String?
  personalAngle  String?
  createdAt      DateTime @default(now())

  @@index([createdAt])
}

model Tweets{
  id              String    @id @default(uuid())
  content         String
  createdAt      DateTime @default(now())
  postUrl         String?

}